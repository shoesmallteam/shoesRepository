<?xml version="1.0" encoding="UTF-8"?>

<class name="zwc.pojo.Account" table="account">
    <property name="accountid" column="accountid" type="String"></property>
    <property name="account" column="account" type="String"></property>
    <property name="password" column="password" type="String"></property>
    <property name="tel" column="tel" type="String"></property>
    <property name="email" column="email" type="String"></property>
    <property name="isassistant" column="isassistant" type="int"></property>
    <property name="isvip" column="isvip" type="int"></property>
    <property name="photo" column="photo" type="String"></property>
    <property name="ssname" column="ssname" type="String"></property>
    <property name="sssex" column="sssex" type="String"></property>
    <property name="ssbirthday" column="ssbirthday" type="String"></property>
    <property name="ssidnumber" column="ssidnumber" type="String"></property>

    <insert id="insertAccount">
        insert into account(accountid,account,password,tel,email,isassistant,isvip,photo,ssname,sssex,ssbirthday,ssidnumber) 
        values(#{accountid},#{account},#{password},#{tel},#{email},#{isassistant},#{isvip},#{photo},#{ssname},#{sssex},#{ssbirthday},#{ssidnumber});
    </insert>
    <select id="selectAccount" returnType="zwc.pojo.Account">
    	select * from account where tel=#{tel};
    </select>
    <select id="selectAccount1" returnType="zwc.pojo.Account">
    	select * from account where email=#{email};
    </select>
    <select id="selectAccount2" returnType="zwc.pojo.Account">
    	select * from account where account=#{account};
    </select>
    
    <select id="selectAll" returnType="zwc.pojo.Account">
    	select * from account
    </select>
    <update id="updateAccountid">
    	update account set photo = #{photo},ssname = #{ssname},sssex = #{sssex},ssbirthday = #{ssbirthday} where accountid=#{accountid};
    </update>
    <select id="selectAccount3" returnType="zwc.pojo.Account">
    	select * from account where accountid=#{accountid};
    </select>
    <select id="selectAccount4" returnType="zwc.pojo.Account">
    	select * from account where password=#{password};
    </select>
    <update id="updateAccountidpass">
    	update account set password = #{password} where accountid=#{accountid};
    </update>
	
	
	
</class>