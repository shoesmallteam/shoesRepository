<?xml version="1.0" encoding="UTF-8"?>

<class name="zwc.pojo.User" table="user">
    <property name="userid" column="userid" type="String"></property>
    <property name="nikename" column="nikename" type="String"></property>
    <property name="address" column="address" type="String"></property>
    <property name="cartid" column="cartid" type="String"></property>
    <property name="accountid" column="accountid" type="String"></property>

    <insert id="insertUser" >
        insert into user(userid,nikename,address,cartid,accountid) 
        values(#{userid},#{nikename},#{address},#{cartid},#{accountid});
    </insert>
    <select id="selectUserAccountid" returnType="zwc.pojo.User">
    	select * from user where accountid=#{accountid};
    </select>
	<update id="updateUser">
    	update user set nikename = #{nikename} where accountid=#{accountid};
    </update>
	
	
</class>